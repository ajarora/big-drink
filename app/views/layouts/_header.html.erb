<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container ">
	  <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
	  <%= link_to "the big drink", root_path, class: "brand brand-center" %>
	  <div class="btn-group pull-right no-collapse">
		<% if current_user %>
		<a class="btn btn-inverse dropdown-toggle" data-toggle="dropdown" href="#">
		  <%= image_tag "https://graph.facebook.com/#{current_user.fb_uid}/picture", class: "avatar-small"%>
		  <%= current_user.name.split(/ /)[0] %>
          <span class="caret"></span>
        </a>
		  <ul class="dropdown-menu">
            <li>
			  	<%= link_to current_user do %>
				  <i class="icon-user"> </i>
				  Profile
				<% end %>
			</li>
            <li class="divider"></li>
            <li><%= link_to "Sign Out", signout_path %></li>
          </ul>
		<% else %>
		  <%= link_to "/auth/facebook", class: "btn btn-inverse btn-signin" do %>
			Sign in
		  <% end %>
		<% end %>

      </div>
	  <form class="navbar-search pull-right no-collapse">
	    <input type="text" class="search-query span3" placeholder="Search">
	    <div class="icon-search"></div>
	  </form>
	  <nav class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "drinks", drinks_path %></li>
          <li><%= link_to "bars", venues_path %></li>
        </ul>
	  </nav>
	  <ul class="nav">
		  <li>
			<iframe allowtransparency="true" frameborder="0" scrolling="no"
			  src="//platform.twitter.com/widgets/follow_button.html?screen_name=thebigdrink&show_screen_name=false&dnt=true&show_count=false"

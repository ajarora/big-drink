<div class="drink-hover">
<div class="drink-actions">
  <% if !current_user %>

    <%= link_to "auth/facebook", class: "btn btn-mini btn-drank" do %>
      <i class="icon-ok"> </i>
	  Drank
	<% end %>
	
  <% else %>

    <% if drink.drank_by?(current_user) %>

      <%= link_to "auth/facebook", class: "btn btn-mini btn-drank disabled" do %>
        <i class="icon-ok"> </i>
	    Drank
	  <% end %>
    
    <% else %>

      <%= form_for(drink.consumptions.build(drinker_id: current_user.id, drank_id: drink.id), remote: true ) do |f| %>
	    <div><%= f.hidden_field :drinker_id %></div>
	    <div><%= f.hidden_field :drank_id %></div>
		<%= f.submit "Drank it?", class: "btn btn-mini btn-drank" %>
	  <% end %>
	<% end %>
  <% end %>

  <%= link_to "#", class: "btn btn-mini btn-want" do %>
    <i class="icon-heart"></i>
  <% end %>

  <%= link_to "#", class: "btn btn-mini btn-comment" do %>
  <i class="icon-comment"> </i>
    Comment
  <% end %>

</div>
</div>

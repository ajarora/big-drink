<li class="span3">
	<div class="thumbnail">
		<%= link_to image_tag( drink.image_url , alt: drink.name , size: "260x180"), drink %>
		<div class="caption">
			<h5>The <%= link_to drink.name, drink %> from <%= link_to drink.venue.name, drink.venue %></h5>
			<p><%= drink.description %></p>
			<p><%= link_to('#', class: "btn btn-primary") do %>
					<i class="icon-ok icon-white"> </i>
					Drank
				<% end %>
				<%= link_to('#', class: "btn") do %>
					<i class="icon-heart"> </i>
					Want
				<% end %>
			</p>
		</div>
	</div>
</li>